{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "frontend/dist", "buildCommand": "npm run build" }
    },
    {
      "src": "quick-preview/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/(.*)", "dest": "/quick-preview/index.html" }
  ],
  
  "env": {
    "NODE_ENV": "production",
    "VITE_DEMO_MODE": "false",
    "VITE_API_URL": "/api"
  }
}
