# ================================================
# OMNI AI WORKER - ENVIRONMENT CONFIGURATION
# ================================================

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# ================================================
# TIER 1: PRODUCTION ESSENTIALS
# ================================================

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_TRACES_SAMPLE_RATE=0.1
GIT_SHA=latest

# Authentication
# Generate secure keys in production
MASTER_API_KEY=change-this-to-secure-random-key-in-production

# Redis (for rate limiting and caching)
# Local: localhost:6379
# GCP: Use Cloud Memorystore IP
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================================
# AI/ML CONFIGURATION
# ================================================

# HuggingFace
HUGGINGFACE_TOKEN=hf_your_token_here
HUGGINGFACE_CACHE_DIR=/tmp/huggingface

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Model Storage
# GCS bucket for model artifacts
GCS_BUCKET=omni-ai-models
GCS_PROJECT_ID=your-project-id

# ================================================
# FEATURE FLAGS
# ================================================

# Enable/disable features
ENABLE_SENTRY=true
ENABLE_RATE_LIMITING=true
ENABLE_AUTH=true
ENABLE_METRICS=true

# ================================================
# PERFORMANCE TUNING
# ================================================

# Model inference timeouts (seconds)
LSTM_TIMEOUT=30
HUGGINGFACE_TIMEOUT=60
AGI_TIMEOUT=120

# Batch sizes
MAX_BATCH_SIZE=32
DEFAULT_BATCH_SIZE=8

# Cache TTL (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# ================================================
# RATE LIMITING TIERS
# ================================================

# Requests per minute by tier
RATE_LIMIT_FREE=100
RATE_LIMIT_PRO=1000
RATE_LIMIT_ENTERPRISE=10000

# ================================================
# DATABASE (if using SQL)
# ================================================

DATABASE_URL=postgresql://user:password@localhost:5432/omni_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ================================================
# DEVELOPMENT / TESTING
# ================================================

# Development mode (disable auth, rate limiting)
DEV_MODE=false

# Mock external services
MOCK_HUGGINGFACE=false
MOCK_NEO4J=false

# Debug logging
DEBUG_SQL=false
DEBUG_REQUESTS=false
