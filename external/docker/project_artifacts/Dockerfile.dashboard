# OMNI Platform Dashboard - Docker Configuration
# Multi-stage build for optimal image size

FROM python:3.11-slim as builder

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    g++ \
    make \
    libffi-dev \
    libssl-dev \
    pkg-config \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy requirements and install Python dependencies (dashboard-specific)
COPY requirements-dashboard.txt ./requirements.txt
COPY omni_platform_api_client.py ./
RUN pip install --no-cache-dir -r requirements.txt

# Production stage
FROM python:3.11-slim

# Install runtime system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd --create-home --shell /bin/bash omni

# Create necessary directories
RUN mkdir -p /opt/omni-dashboard/logs && \
    chown -R omni:omni /opt/omni-dashboard

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Copy application files
COPY omni_dashboard_professional.py /opt/omni-dashboard/
COPY omni_web_dashboard.py /opt/omni-dashboard/
COPY omni_platform /opt/omni-dashboard/omni_platform

# Set working directory
WORKDIR /opt/omni-dashboard

# Set environment variables
ENV PATH="/opt/venv/bin:$PATH"
ENV PYTHONPATH="/opt/omni-dashboard"
ENV PORT=8080
ENV ORCHESTRATION_ENABLED=1
ENV OMNI_SYSTEM_CHECKS=false
ENV OMNI_QUIET_CLOUDRUN=true

# Switch to non-root user
USER omni

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Start the dashboard via Uvicorn import path so __main__ block doesn't block route registration
CMD ["uvicorn", "omni_web_dashboard:app", "--host", "0.0.0.0", "--port", "8080"]