# OMNI Quantum Entanglement Node - Distributed Entanglement Container
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create entanglement user
RUN useradd --create-home --shell /bin/bash entanglement

# Set working directory
WORKDIR /app

# Copy entanglement requirements
COPY requirements-entanglement.txt requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy entanglement source code
COPY omni_quantum_entanglement.py /app/
COPY entanglement/ /app/entanglement/

# Create necessary directories
RUN mkdir -p /app/entanglement_data /app/logs
RUN chown -R entanglement:entanglement /app

# Switch to entanglement user
USER entanglement

# Expose entanglement port
EXPOSE 8083

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8083/entanglement/health || exit 1

# Start entanglement service
CMD ["python", "omni_quantum_entanglement.py"]