{
  "displayName": "Cloud Run Availability (low traffic heuristic) - omni-dashboard",
  "userLabels": {
    "service": "omni-dashboard",
    "env": "prod"
  },
  "conditions": [
    {
      "displayName": "No requests for 5m",
      "conditionThreshold": {
        "filter": "resource.type=\"cloud_run_revision\" AND resource.label.\"service_name\"=\"omni-dashboard\" AND metric.type=\"run.googleapis.com/request_count\"",
        "aggregations": [
          {
            "alignmentPeriod": "60s",
            "perSeriesAligner": "ALIGN_RATE",
            "crossSeriesReducer": "REDUCE_SUM",
            "groupByFields": [
              "resource.label.\"service_name\""
            ]
          }
        ],
        "comparison": "COMPARISON_LT",
        "thresholdValue": 0.1,
        "duration": "5m",
        "trigger": {
          "count": 1
        }
      }
    }
  ],
  "documentation": {
    "content": "Heuristic for low-traffic services: alert if the service receives no requests for a sustained period. Consider adding an Uptime Check and an HTTP health endpoint.",
    "mimeType": "text/markdown"
  },
  "combiner": "OR",
  "enabled": true,
  "notificationChannels": [  ]
}
