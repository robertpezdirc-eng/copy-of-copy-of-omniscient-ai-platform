# Build stage
FROM node:18-bullseye AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev) for build
# Dev dependencies like TypeScript and Vite are required to build the app
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Optional build-time configuration for Vite
# These args can be provided via --build-arg or Cloud Build substitutions
ARG VITE_API_URL
ARG VITE_WS_URL
ARG VITE_APP_NAME
ARG VITE_APP_VERSION

# If provided, write a .env.production file so Vite picks these up during build
RUN set -ex \
  && echo "# auto-generated by Docker build" > .env.production \
  && if [ -n "${VITE_API_URL}" ]; then echo "VITE_API_URL=${VITE_API_URL}" >> .env.production; fi \
  && if [ -n "${VITE_WS_URL}" ]; then echo "VITE_WS_URL=${VITE_WS_URL}" >> .env.production; fi \
  && if [ -n "${VITE_APP_NAME}" ]; then echo "VITE_APP_NAME=${VITE_APP_NAME}" >> .env.production; fi \
  && if [ -n "${VITE_APP_VERSION}" ]; then echo "VITE_APP_VERSION=${VITE_APP_VERSION}" >> .env.production; fi

# Build application
RUN npm run build

# Production stage using a minimal Node HTTP static server
FROM node:18-alpine AS runner

WORKDIR /app

# Copy built app
COPY --from=builder /app/dist /app/dist

# Install lightweight static file server
RUN npm install -g serve

# Cloud Run sets PORT env var
ENV PORT=8080

# Expose port
EXPOSE 8080

# Start static server binding to all interfaces and Cloud Run port
CMD ["serve", "-s", "dist", "-l", "tcp://0.0.0.0:8080"]

