# Simplified frontend Cloud Build config
# Uses gcr.io registry and minimal steps for faster troubleshooting
steps:
  # Build frontend Docker image
  - name: 'gcr.io/cloud-builders/docker'
    args:
      - 'build'
      - '--build-arg'
      - 'VITE_API_URL=${_VITE_API_URL}'
      - '--build-arg'
      - 'VITE_WS_URL=${_VITE_WS_URL}'
      - '-t'
      - 'gcr.io/${_PROJECT_ID}/omni-frontend:${_TAG}'
      - '-f'
      - 'frontend/Dockerfile'
      - 'frontend'
    timeout: 1200s

  # Push image
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/${_PROJECT_ID}/omni-frontend:${_TAG}']
    timeout: 300s

  # Deploy to Cloud Run
  - name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
    entrypoint: gcloud
    args:
      - 'run'
      - 'deploy'
      - 'omni-frontend'
      - '--image=gcr.io/${_PROJECT_ID}/omni-frontend:${_TAG}'
      - '--region=${_REGION}'
      - '--platform=managed'
      - '--allow-unauthenticated'
      - '--port=8080'
    timeout: 600s

images:
  - 'gcr.io/${_PROJECT_ID}/omni-frontend:${_TAG}'

substitutions:
  _PROJECT_ID: 'refined-graph-471712-n9'
  _REGION: 'europe-west1'
  _TAG: 'latest'
  _VITE_API_URL: 'https://omni-ultra-backend-guzjyv6gfa-ew.a.run.app'
  _VITE_WS_URL: 'wss://omni-ultra-backend-guzjyv6gfa-ew.a.run.app'

options:
  machineType: 'E2_HIGHCPU_8'
  logging: CLOUD_LOGGING_ONLY

timeout: 2400s
