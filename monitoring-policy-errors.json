{
  "displayName": "OMNI Platform - High Error Rate",
  "documentation": {
    "content": "Alert when error rate exceeds 10% for more than 10 minutes",
    "mimeType": "text/markdown"
  },
  "conditions": [
    {
      "displayName": "Error rate for Cloud Run services",
      "conditionThreshold": {
        "filter": "resource.type = \"cloud_run_revision\" AND metric.type = \"run.googleapis.com/request_count\" AND metric.label.response_code_class != \"2xx\"",
        "aggregations": [
          {
            "alignmentPeriod": "600s",
            "crossSeriesReducer": "REDUCE_SUM",
            "perSeriesAligner": "ALIGN_RATE"
          }
        ],
        "comparison": "COMPARISON_GT",
        "thresholdValue": 0.1,
        "duration": "600s"
      }
    }
  ],
  "alertStrategy": {
    "notificationRateLimit": {
      "timeWindow": "1800s"
    }
  },
  "combiner": "OR",
  "enabled": true,
  "notificationChannels": []
}